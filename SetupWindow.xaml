<Window x:Class="BoxBreathing.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setup Window" Height="150" Width="300"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button x:Name="StartButton" Content="Start" Width="100" Margin="0,0,0,10" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Content="Stop" Width="100" Click="StopButton_Click"/>
    </StackPanel>
</Window>

